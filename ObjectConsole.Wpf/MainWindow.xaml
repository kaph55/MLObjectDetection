<Window x:Class="ObjectConsole.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object Viewer" Height="720" Width="1000">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Top controls and summary -->
    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,8">
      <Button x:Name="OpenButton" Width="120" Margin="0,0,8,0" Click="OpenButton_Click">Vaelg billede</Button>
      <Button x:Name="DetectButton" Width="140" Click="DetectButton_Click">Send til Roboflow</Button>
      <TextBlock x:Name="StatusText" Margin="12,4,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <!-- Summary box spanning the width -->
    <Border Grid.Row="0" Margin="0,36,0,8" BorderBrush="#FFBDBDBD" BorderThickness="1" Background="#FFF7F7F7" Padding="6">
      <TextBox x:Name="SummaryText" IsReadOnly="True" Text="Antal fundet: 0" Background="Transparent" BorderThickness="0"/>
    </Border>

    <!-- Main content: image on left, predictions on right -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="300"/>
      </Grid.ColumnDefinitions>

      <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
          <!-- limit displayed image size so it fits the UI instead of rendering at full pixel size -->
          <Image x:Name="PreviewImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"
                 MaxWidth="600" MaxHeight="600" />
          <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False"/>
        </Grid>
      </ScrollViewer>

      <Border Grid.Column="1" Margin="8,0,0,0" BorderBrush="#FFBDBDBD" BorderThickness="1" Padding="6">
        <StackPanel>
          <TextBlock FontWeight="Bold" Text="Predictions" Margin="0,0,0,6"/>
          <ListBox x:Name="PredictionsList" Height="300"/>
          <TextBox x:Name="OutputText" Margin="0,8,0,0" Height="200" FontFamily="Consolas" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </StackPanel>
      </Border>
    </Grid>

    <!-- Bottom controls: confidence slider -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,8,0,0">
      <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Confidence:</TextBlock>
      <Slider x:Name="ConfidenceSlider" Minimum="0" Maximum="1" Value="0.1" Width="200" TickFrequency="0.01" IsSnapToTickEnabled="False" />
      <TextBlock x:Name="ConfidenceValue" Margin="8,0,0,0" VerticalAlignment="Center">0.10</TextBlock>
    </StackPanel>
  </Grid>
</Window>